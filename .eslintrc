{
    "env": {
        "node": true,
        "browser": true,
        "es6": true,
        "jest": true
    },
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
        "arrow-parens": "off",
        "linebreak-style": [
            "error",
            "windows"
        ],
        "react/forbid-prop-types": 0,
        "react/destructuring-assignment": 0,
        "react/jsx-filename-extension": 0,
        "react/jsx-wrap-multilines": {
            "condition": "ignore"
        },
        "react/prop-types": [
            2,
            {
                "ignore": [
                    "children"
                ]
            }
        ]
    }
}